[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    venv,
    .venv,
    .mypy_cache,
    .pytest_cache
max-complexity = 10
docstring-convention = google
per-file-ignores =
    __init__.py:F401,D104
    test_*.py:D100,D101,D102,D103,D202
